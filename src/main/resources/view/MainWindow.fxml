<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="388.0"
            style="-fx-background-color: #1b1b1b;"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="benn.ui.MainWindow">
    <children>
        <ScrollPane fx:id="chatScrollPane"
                    fitToHeight="true" fitToWidth="true"
                    hbarPolicy="NEVER" vvalue="1.0" hvalue="1.0"
                    maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    prefHeight="557.0" prefWidth="400.0"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="-0.0" AnchorPane.bottomAnchor="40.0">
            <content>
                <VBox fx:id="dialogParentContainer"
                      maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      prefHeight="552.0" prefWidth="388.0"
                      spacing="8.0"
                      style="-fx-background-color: #1b1b1b; -fx-padding: 12;" />
            </content>
        </ScrollPane>

        <HBox maxHeight="40.0" minHeight="40.0" prefHeight="40.0"
              spacing="10.0"
              style="-fx-background-color: #232323; -fx-padding: 4 8 4 8; -fx-border-color: #2b2b2b; -fx-border-width: 1 0 0 0;"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <TextField fx:id="inputField"
                           maxWidth="1.7976931348623157E308" minWidth="150.0"
                           prefHeight="40.0"
                           promptText="Type a messageâ€¦"
                           onAction="#handleUserInput"
                           HBox.hgrow="ALWAYS"
                           style="
                               -fx-background-color: #2a2a2a;
                               -fx-background-insets: 0;
                               -fx-background-radius: 10;
                               -fx-text-fill: #eaeaea;
                               -fx-prompt-text-fill: #8a8a8a;
                               -fx-padding: 8 12 8 12;
                               -fx-font-size: 12.5px;" />
                <Button fx:id="sendButton"
                        alignment="CENTER"
                        minWidth="60.0" prefWidth="76.0" prefHeight="40.0"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        text="Send" textFill="#ffffff"
                        style="
                            -fx-background-color: #2e7d32;
                            -fx-background-radius: 10;
                            -fx-font-weight: bold;" />
            </children>
        </HBox>
    </children>
</AnchorPane>
